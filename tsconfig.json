{
  "compilerOptions": {
    "baseUrl": "./src",
    "rootDir": "src",
    "outDir": "dist",
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true
  },
  "watchOptions": {
    "excludeDirectories": ["node_modules", "dist"]
  },
  "include": ["src/**/*.ts"]
}
